<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#CAB120"
    android:layout_height="match_parent">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:scrollbars="none">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/padding_10"
        android:orientation="vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/driveProfileIV"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            app:civ_border_width="3dp"
            android:layout_marginTop="@dimen/dimen_30dp"
            app:civ_border_color="@color/black"
            android:src="@drawable/ic_user_profile"/>
        <TextView
            android:id="@+id/nameTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_20dp"
            android:fontFamily="@font/font_opensans_semibold"
            android:textColor="@color/white"
            android:textSize="22dp"
            android:singleLine="true"
            android:gravity="center"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_margin="@dimen/dimen_20dp"
            android:background="@color/white"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/editProfileTV"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:text="◘ Edit Profile"
                android:paddingStart="@dimen/dimen_20dp"
                android:gravity="center|start"
                android:textColor="@color/white"
                android:fontFamily="@font/poppins_semibold"
                android:textSize="@dimen/dimen_16dp"/>

            <TextView
                android:id="@+id/MyRideTV"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:text="◘ My Ride"
                android:visibility="gone"
                android:paddingStart="@dimen/dimen_20dp"
                android:gravity="center|start"
                android:textColor="@color/white"
                android:fontFamily="@font/poppins_semibold"
                android:textSize="@dimen/dimen_16dp"/>

            <TextView
                android:id="@+id/ReferDrivingCrewTV"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:text="◘ Refer Driving Crew"
                android:paddingStart="@dimen/dimen_20dp"
                android:gravity="center|start"
                android:textColor="@color/white"
                android:fontFamily="@font/poppins_semibold"
                android:textSize="@dimen/dimen_16dp"/>

            <TextView
                android:id="@+id/SupportTV"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:text="◘ Support"
                android:paddingStart="@dimen/dimen_20dp"
                android:gravity="center|start"
                android:textColor="@color/white"
                android:fontFamily="@font/poppins_semibold"
                android:textSize="@dimen/dimen_16dp"/>
            <TextView
                android:id="@+id/AboutUsTV"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:text="◘ About Us"
                android:paddingStart="@dimen/dimen_20dp"
                android:gravity="center|start"
                android:textColor="@color/white"
                android:fontFamily="@font/poppins_semibold"
                android:textSize="@dimen/dimen_16dp"/>
            <TextView
                android:id="@+id/LogoutTV"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:text="◘ Logout"
                android:paddingStart="@dimen/dimen_20dp"
                android:gravity="center|start"
                android:textColor="@color/white"
                android:fontFamily="@font/poppins_semibold"
                android:textSize="@dimen/dimen_16dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:layout_margin="@dimen/dimen_20dp"
                android:background="@color/white"/>
        </LinearLayout>

        <ImageView
            android:layout_width="100sp"
            android:layout_height="100sp"
            android:layout_gravity="center"
            android:src="@mipmap/ic_launcher"/>

    </LinearLayout>






</ScrollView>
</RelativeLayout>